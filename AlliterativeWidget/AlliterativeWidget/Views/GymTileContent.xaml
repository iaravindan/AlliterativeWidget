<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="AlliterativeWidget.Views.GymTileContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <!-- Loading overlay -->
        <Border
            x:Name="LoadingOverlay"
            Background="#80000000"
            CornerRadius="10"
            Visibility="Collapsed">
            <ProgressRing
                Width="24"
                Height="24"
                IsActive="True"
                Foreground="#E07C4B" />
        </Border>

        <!-- Main content -->
        <StackPanel x:Name="ContentPanel" Spacing="8">
            <!-- Title: "Consistency Index" -->
            <TextBlock
                x:Name="TitleText"
                FontFamily="Cascadia Mono, Consolas, Courier New"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="#E07C4B"
                Text="Consistency Index" />

            <!-- Progress bar row with inline percentage -->
            <Grid Height="14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Progress bar -->
                <Grid Grid.Column="0" Height="8" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Border
                        Background="#282828"
                        CornerRadius="4" />
                    <Border
                        x:Name="ProgressFill"
                        HorizontalAlignment="Left"
                        Background="#4CAF50"
                        CornerRadius="4"
                        Width="0" />
                </Grid>

                <!-- Percentage label -->
                <TextBlock
                    x:Name="PercentLabel"
                    Grid.Column="1"
                    FontFamily="Cascadia Mono, Consolas, Courier New"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Foreground="#A0A0A0"
                    VerticalAlignment="Center"
                    Text="0%" />
            </Grid>

            <!-- Month labels row (built in code-behind) -->
            <StackPanel x:Name="MonthLabelsPanel" Orientation="Horizontal" />

            <!-- Heatmap grid (built in code-behind) -->
            <StackPanel x:Name="HeatmapPanel" Orientation="Vertical" Spacing="2" />

            <!-- Error message -->
            <TextBlock
                x:Name="ErrorText"
                FontFamily="Cascadia Mono, Consolas, Courier New"
                FontSize="10"
                Foreground="#F44336"
                TextWrapping="Wrap"
                Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</UserControl>
